<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/blue121" android:startColor="@color/blue121" />

            <corners android:radius="3dp" />

            <padding android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/grey121" android:startColor="@color/grey121" />

            <corners android:radius="5dp" />

            <padding android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="0dp" />
        </shape>
    </item>

</selector>
